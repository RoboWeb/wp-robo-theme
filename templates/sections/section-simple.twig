{#
  Title: Section: Simple
  Description: A section with content only
  #}

{% import "macros/styles.macro.twig" as _style %}

{% set fields = section.section_simple_content %}
{% set animation_classes = animation_on ? " scrollme animateme " : "" %}

<div
	class="section-content-wrapper w-full max-w-screen-xl mx-auto flex md:flex-row flex-col flex-nowrap items-stretch" style="min-height: 1rem;">
	<!-- section: simple - animation {{ animation_on }} -->
	<div class="row flex-1 flex md:flex-row flex-col items-stretch">
		{% if fields.content.title %}
			<div class="column text-left flex-grow-0 w-5/12 md:mb-0 mb-12 {{ fields.content.introduction ? " pr-12" : " " }}{{ animation_classes }}" data-when="enter" data-from="0.3" data-to="0" data-crop="false" data-opacity="0" data-translatex="-300">
				{% set offsets = fields.content.offsets_of.title %}
				{% set style = "" ~ 'style="' 
						~ _style.single("font-size", (fields.content.title_font_size ? fields.content.title_font_size / 100 : false), "rem") 
						~ _style.single("font-color", fields.content.title_text_color, "")
						~ _style.single("margin-top", offsets.margins.top)
						~ _style.single("margin-right", offsets.margins.right)
						~ _style.single("margin-bottom", offsets.margins.bottom)
						~ _style.single("margin-left", offsets.margins.left)
						~ _style.single("pading-top", offsets.padings.top)
						~ _style.single("pading-right", offsets.padings.right)
						~ _style.single("pading-bottom", offsets.padings.bottom)
						~ _style.single("pading-left", offsets.padings.left)
						~ '"'
					%}
				<h2 class="block-content-title font-bold lg:text-xl text-lg leading-none md:mb-0 mb-12" {{style}}>{{ fields.content.title }}</h2>
			</div>
		{% endif %}
		{% if fields.content.introduction %}
			{% set offsets = fields.content.offsets_of.introduction %}
			{% set style = "" ~ 'style="' 
				~ _style.single("font-size", (fields.content.introduction_font_size ? fields.content.introduction_font_size / 100 : false), "rem") 
				~ _style.single("font-color", fields.content.introduction_text_color, "")
				~ _style.single("margin-top", offsets.margins.top)
				~ _style.single("margin-right", offsets.margins.right)
				~ _style.single("margin-bottom", offsets.margins.bottom)
				~ _style.single("margin-left", offsets.margins.left)
				~ _style.single("pading-top", offsets.padings.top)
				~ _style.single("pading-right", offsets.padings.right)
				~ _style.single("pading-bottom", offsets.padings.bottom)
				~ _style.single("pading-left", offsets.padings.left)
				~ '"'
			%}
			<div class="column text-left flex-1 text-left {{ fields.content.title ? " md:pl-12 pl-0" : " " }}{{ animation_classes }}" data-when="enter" data-from="0.5" data-to="0" data-crop="false" data-opacity="0" data-translatex="300">
				<div class="block-content-intro text-base" {{ style }}>{{ fields.content.introduction }}</div>
				{% if fields.content.link %}
					{% set offsets = fields.content.offsets_of.link %}
					{% set style = "" ~ 'style="' 
						~ _style.single("font-size", (fields.content.link_font_size ? fields.content.link_font_size / 100 : false), "rem") 
						~ _style.single("font-color", fields.content.link_text_color, "")
						~ _style.single("margin-top", offsets.margins.top)
						~ _style.single("margin-right", offsets.margins.right)
						~ _style.single("margin-bottom", offsets.margins.bottom)
						~ _style.single("margin-left", offsets.margins.left)
						~ _style.single("pading-top", offsets.padings.top)
						~ _style.single("pading-right", offsets.padings.right)
						~ _style.single("pading-bottom", offsets.padings.bottom)
						~ _style.single("pading-left", offsets.padings.left)
						~ '"'
					%}
					<a href="{{ fields.content.link.url }}" target="{{ fields.content.link.target ?: "_self" }}" class="lowercase underline hero-intro" {{style}}>
						{{ fields.content.link.title ?: "read more" }}
					</a>
				{% endif %}
			</div>
		{% endif %}
	</div>
	<!-- //section: simple -->
</div>
