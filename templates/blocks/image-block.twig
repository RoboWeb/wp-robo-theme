{#
  Title: Block: Image
  Description: A block for single image
#}
{% set img_margin_top = image.image_margins.margin_top ? "margin-top: #{image.image_margins.margin_top}px; " : "margin-top: auto; " %}
{% set img_margin_right = image.image_margins.margin_right ? "margin-right: #{image.image_margins.margin_right}px; " : "margin-right: auto; " %}
{% set img_margin_bottom = image.image_margins.margin_bottom ? "margin-bottom: #{image.image_margins.margin_bottom}px; " : "margin-bottom: auto; " %}
{% set img_margin_left = image.image_margins.margin_left ? "margin-left: #{image.image_margins.margin_left}px; " : "margin-left: auto; " %}


<div class="block-image-wrapper">
  <!-- block: image-block -->
	<img src="{{ image.image }}" alt="{{ image.image_alt }}" class="justify-self-center" style="{{ img_margin_top }}{{ img_margin_right }}{{ img_margin_bottom }}{{ img_margin_left }}"/>
  <!-- //block: image-block -->
</div>
