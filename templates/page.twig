{% extends "base.twig" %}

{% block content %}
	<!-- page/block: content -->
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1" style="display: none;">{{post.title}}</h1>
				<div class="article-body" style="background: red;">
					{% for section in post.meta('sections') %}
						{% include "partial/section.twig" with {'section': section, section_index: loop.index0} %}
					{% endfor %}
					{# {{post.content}} #}
				</div>
			</section>
		</article>
	</div>
	<!-- /content-wrapper -->

	<!-- /page -->
{% endblock %}
