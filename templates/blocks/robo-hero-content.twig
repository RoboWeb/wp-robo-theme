{#
  Title: Robo: Hero Content Block
  Description: A part of hero section with header, introduction and link.
  Category: formatting
  Icon: format-aside
  Keywords: 'hero', 'text', 'quote'
  Mode: edit
  Align: center
  PostTypes: page post
  SupportsAlign: left right center
  SupportsMode: true
  SupportsMultiple: true
#}

{% set font_size = ['text-xs', 'text-sm', 'text-base', 'text-lg', 'text-xl', 'text-2xl', 'text-3xl', 'text-4xl', 'text-5xl', 'text-6xl', 'text-7xl', 'text-8xl', 'text-9xl'] %}
{% set button_size = ['px-4 py-2', 'px-8 py3', 'px-12 py-6'] %}
<div class="hero-content-block {{ classes }} block-{{ block.id }}" {{ block.id }}>
	<div class="hero-content-wrapper">
		{% if fields.heading %}
			<h2 class="{{ font_size[fields.heading_font_size] }}" style="color: {{ fields.heading_text_color }};">{{ fields.heading }}</h2>
		{% endif %}
		{% if fields.introduction %}
			<p class="{{ font_size[fields.introduction_font_size] }}" style="color: {{ fields.introduction_text_color }};">{{ fields.introduction }}</p>
		{% endif %}
		{% if fields.link %}
			<div class="rounded-md shadow">
				<a href="{{ fields.link ?: '#' }}" class="{{ fields.is_button ? 'button' : '' }} {{ fields.is_button ? button_size[fields.button_size] : '' }}">
					{{ fields.link_text ?: fields.link }}
				</a>
				<span>{{ fields.button_size }}</span>
			</div>
		{% endif %}
	</div>
</div>
